#!/usr/bin/env bash
# Start script for Dolt SQL server
# Data dir: {{ dolt_data_dir }} (independent from gt)
# Port: {{ dolt_port }} (standard MySQL)

set -e

DOLT_DATA_DIR="{{ dolt_data_dir }}"

exec dolt sql-server \
  --port {{ dolt_port }} \
  --data-dir "$DOLT_DATA_DIR" \
  --max-connections {{ dolt_max_connections }}
